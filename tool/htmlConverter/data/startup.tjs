var KAG_MODE = false; // ksƒtƒ@ƒCƒ‹
var TJS_MODE = false; // tjsƒtƒ@ƒCƒ‹
var INIT_MODE = false; // envinit.tjs
var insertBr = false; // ‰üs‚²‚Æ‚É<br>ƒ^ƒO‚ğ“ü‚ê‚é‚©

